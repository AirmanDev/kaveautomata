        <Button Style="{StaticResource RoundedButtonStyle}" Content="Moccaccino" Width="200" Height="40" Canvas.Left="40" Canvas.Top="270"/>
        <Button Style="{StaticResource RoundedButtonStyle}" Content="Forró Csoki" Width="200" Height="40" Canvas.Left="40" Canvas.Top="320"/>

        <!-- Jobb oldali egységes panel (ár + cukor +/- + vásárlás) -->
        <StackPanel Canvas.Left="280" Canvas.Top="20" Width="130">
            <!-- Ár és alatta a 0 mögé panel (lekerekített sarokkal) -->
            <Border Width="130" Height="80"
                    Background="#FFF0F0F0" CornerRadius="8" BorderBrush="#FF707070" BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Ár" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4"/>
                    <TextBlock Text="0" FontSize="24" HorizontalAlignment="Center" Margin="0,4"/>
                </StackPanel>
            </Border>

            <!-- Cukor: - Cukor +, az árpanel alatt középen -->
            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource RoundedButtonStyle}" Width="40" Height="40" Content="-"/>
                <TextBlock Grid.Column="1" Text="Cukor" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button Grid.Column="2" Style="{StaticResource RoundedButtonStyle}" Width="40" Height="40" Content="+"/>
            </Grid>

            <!-- Vásárlás gomb: terminál kép, nincs felirat -->
            <Button Style="{StaticResource RoundedButtonStyle}" Width="100" Height="90" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/terminal.jpg"/>
