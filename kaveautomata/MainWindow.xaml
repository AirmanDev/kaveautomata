<Window x:Class="kaveautomata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kaveautomata"
        mc:Ignorable="d"
        Title="Kávéautomata" Height="600" Width="450" ResizeMode="NoResize" Background="#6F4E37">
    <Window.Resources>
        <!-- Egységes gomb stílus: csak körvonal hoverkor, nincs háttér/kurzor változás, és nyomáskor sincs fehéredés -->
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Style.Setters>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="BorderBrush" Value="#FF707070"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="#FFF0F0F0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <!-- csak körvonal változik -->
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF0078D4"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <!-- nincs IsPressed háttérváltozás -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
    </Window.Resources>

    <Canvas Height="584">
        <!-- Elrendezés: 450 széles ablak; bal panel 200, jobb panel 130; közök: 40-40-40 -->
        <!-- Bal oldali gombok (Canvas.Left=40) egységes távolsággal -->
        <Button x:Name="Fekete_Kave" Style="{StaticResource RoundedButtonStyle}" Content="Fekete Kávé" Width="200" Height="40" Canvas.Left="40" Canvas.Top="20" Click="Fekete_Kave_Click"/>
        <Button x:Name="Hosszu_Kave" Style="{StaticResource RoundedButtonStyle}" Content="Hosszú Kávé" Width="200" Height="40" Canvas.Left="40" Canvas.Top="70" Click="Hosszu_Kave_Click"/>
        <Button x:Name="Latte" Style="{StaticResource RoundedButtonStyle}" Content="Latte" Width="200" Height="40" Canvas.Left="40" Canvas.Top="120" Click="Latte_Click"/>
        <Button x:Name="Cappuccino" Style="{StaticResource RoundedButtonStyle}" Content="Cappuccino" Width="200" Height="40" Canvas.Left="40" Canvas.Top="170" Click="Cappuccino_Click"/>
        <Button x:Name="Jegeskave" Style="{StaticResource RoundedButtonStyle}" Content="Jegeskávé" Width="200" Height="40" Canvas.Left="40" Canvas.Top="220" Click="Jegeskave_Click"/>
        <Button x:Name="Moccaccino" Style="{StaticResource RoundedButtonStyle}" Content="Moccaccino" Width="200" Height="40" Canvas.Left="40" Canvas.Top="270" Click="Moccaccino_Click"/>
        <Button x:Name="Forro_Csoki" Style="{StaticResource RoundedButtonStyle}" Content="Forró Csoki" Width="200" Height="40" Canvas.Left="40" Canvas.Top="320" Click="Forro_Csoki_Click"/>

        <!-- Ár és alatta a 0 mögé panel (lekerekített sarokkal) -->
        <Border Canvas.Left="280" Canvas.Top="20" Width="130" Height="80"
                Background="#FFF0F0F0" CornerRadius="8" BorderBrush="#FF707070" BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ár" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4"/>
                <TextBlock x:Name="Ar_ki" Text="0" FontSize="24" HorizontalAlignment="Center" Margin="0,4"/>
            </StackPanel>
        </Border>

        <!-- Jobb oldali panel bal széle (Canvas.Left=280), szélesség 130 -->
        <!-- Mennyiség: - 0 +, középre igazítva a jobb panelben -->
        <Button x:Name="Cukor_Less" Style="{StaticResource RoundedButtonStyle}" Width="40" Height="40" Canvas.Left="285" Canvas.Top="170" Content="-" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Cukor_Less_Click" IsEnabled="False"/>
        <TextBlock x:Name="Cukor_ki" Text="0" FontSize="24" Width="40" TextAlignment="Center" Canvas.Left="325" Canvas.Top="176" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="Cukor_More" Style="{StaticResource RoundedButtonStyle}" Width="40" Height="40" Canvas.Left="365" Canvas.Top="170" Content="+" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Cukor_More_Click" IsEnabled="False"/>

        <!-- Vásárlás gomb: terminál kép, nincs felirat -->
        <Button x:Name="Buy" Style="{StaticResource RoundedButtonStyle}" Width="100" Height="90" Canvas.Left="295" Canvas.Top="230" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Buy_Click" IsEnabled="False">
            <Button.Background>
                <ImageBrush ImageSource="/terminal.jpg"/>
            </Button.Background>
            <Image Source="Assets/terminal.png" Stretch="Uniform" Height="24"/>
        </Button>
        <Image Height="200" Source="/banner.jpg" Stretch="Fill" Canvas.Top="384" Width="450" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/banner.jpg"/>
            </Image.OpacityMask>
        </Image>
        <Border Canvas.Left="280" Canvas.Top="120" Width="130" Height="40"
            Background="#FFF0F0F0" CornerRadius="8" BorderBrush="#FF707070" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4" Text="Cukor"/>
            </StackPanel>
        </Border>
        <Button x:Name="Reset_Materials"  Style="{StaticResource RoundedButtonStyle}" Canvas.Left="280" Canvas.Top="320" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="40" Click="Reset_Materials_Click" Visibility="Hidden"/>
    </Canvas>
</Window>
